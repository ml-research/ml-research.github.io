@inproceedings{xu2011multi,
	title        = {Multi-task learning with task relations},
	author       = {Zhao Xu and Kristian Kersting},
	year         = 2011,
	booktitle    = {Proceedings of the 11th IEEE International Conference on Data Mining (ICDM)},
