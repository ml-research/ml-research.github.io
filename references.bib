@incollection{brack2024communityoscar,
	anote = {./images/brack2024communityoscar.png},
	author = {Manuel Brack and Malte Ostendorff and Pedro Ortiz Suarez and Jos√© Javier Saiz and I√±aki Lacunza Castilla and Jorge Palomar-Giner and Patrick Schramowski and Georg Rehm and Marta Villegas and Kristian Kersting},
