@inproceedings{deiseroth2023atman,
	anote = {./images/deb2023atman.png},
	author = {Bj√∂rn Deiseroth and Mayukh Deb and Samuel Weinbach and Manuel Brack and Patrick Schramowski and Kristian Kersting},
