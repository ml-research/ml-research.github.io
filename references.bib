@article{hintersdorf2024clip_privacy,
	title        = {Does CLIP Know My Face?},
	author       = {Dominik Hintersdorf and Lukas Struppek and Manuel Brack and Felix Friedrich and Patrick Schramowski and Kristian Kersting},
